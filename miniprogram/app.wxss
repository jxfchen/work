/**app.wxss**/
@import 'animate.wxss';
@import "weui.wxss";
@import "/wxParse/wxParse.wxss";

.container {
  font-size: 32rpx;
}

.ewm {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.3);
}

.ewm .ewm_img {
  top: 30rpx;
  left: 50%;
  width: 280rpx;
  position: absolute;
  margin-left: -140rpx;
}

.close {
  top: -20rpx;
  width: 40rpx;
  right: -20rpx;
  position: absolute;
}

.ewm-box {
  top: 50%;
  left: 50%;
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  border-radius: 15rpx;
  background: rgba(254, 88, 76, .8);
  margin: -200rpx 0 0 -200rpx;
}
.ewm-box text{
  width: 100%;
  bottom: 25rpx;
  color: #fff;
  display: block;
  font-size: 24rpx;
  position: absolute;
  line-height: 34rpx;
  text-align: center;
}
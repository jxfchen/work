/**app.wxss**/
@import 'animate.wxss';
@import "weui.wxss";
@import "/wxParse/wxParse.wxss";
.container {
 font-size: 32rpx;
} 
.ewm{
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  background: rgba(0, 0, 0, 0.3);
}
.ewm .ewm_img{
  width: 300rpx;
}
.close{
  top: -20rpx;
  width: 40rpx;
  right: -20rpx;
  position: absolute;
}
.ewm-box{
  top: 50%;
  left: 50%;
  position: absolute;
  margin: -200rpx 0 0 -150rpx;
  width: 300rpx;
  height: auto;
}
.weui-navbar {
  border-bottom: none !important;
  padding-bottom: 28rpx;
  flex-direction: row;
}

.weui-navbar text {
    white-space:nowrap;
  text-decoration: none;
  font-size: 30rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(196, 196, 196, 1);
  padding: 0 !important;
}
.weui-navbar__item{
    margin-right: 20rpx;
    width:150rpx;
}
.weui-navbar__item.weui-bar__item_on {
    margin-right: 20rpx;
    white-space:nowrap;
    width:150rpx;
  background-color: white;
  color: rgba(50, 50, 50, 1);
  font-size: 30rpx;
  font-weight: bold;
  opacity: 1;
  border-right: none;
}

.weui-bar__item_on::after {
  width: 80%;
  height: 3px;
  display: block;
  margin: 0 auto;
  position: relative;
  bottom: -28rpx;
  right: auto;
  top: auto;
  background: linear-gradient(180deg, #fd8c74, #f66759);
}

.weui_tab_bd_item.weui_tab_bd_item_active {
  display: block;
}


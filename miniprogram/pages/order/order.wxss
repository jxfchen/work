.weui-navbar {
    border-bottom: none !important;
    padding-bottom: 28rpx;
}

.weui-navbar a {
    text-decoration: none;
    font-size: 26rpx;
    font-family: PingFangSC;
    font-weight: 400;
    color: rgba(46, 52, 55, 1);
    opacity: 0.6;
    width: 749rpx;
    padding: 0 !important;
    margin-top: 31rpx;
}

.weui-navbar__item.weui-bar__item_on {
    background-color: white;
    color: #ff564b;
    font-size: 32rpx;
    font-weight: bold;
    opacity: 1;
}

.weui_tab_bd_item {
    display: none;
    height: 100%;
    overflow: auto;
}

.weui_tab_bd_item.weui_tab_bd_item_active {
    display: block;
}

.weui-tab__panel {
    background-color: #f6f6f6;
    height: 1048rpx;
    width: 749rpx;
}

.card {
    width: 690rpx;
    height: 348rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 10rpx;
    margin-top: 31rpx;
    margin-left: 30rpx;
}

.manager {
    width: 164rpx;
    height: 53rpx;
    background: linear-gradient(90deg, rgba(255, 86, 75, 1), rgba(255, 127, 119, 1));
    box-shadow: 0rpx 7rpx 18rpx 0rpx rgba(241, 146, 126, 0.79);
    border-radius: 25rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
    line-height: 50rpx;
    text-align: center;
    position: absolute;
    left: 233rpx;
    top: 41rpx;
}

.top {
    width: 355rpx;
    height: 70rpx;
    background: rgba(255, 86, 75, 1);
    opacity: 0.11;
    border-radius: 33rpx;
    margin-left: 224rpx;
    margin-top: 32rpx;
}

.staff {
    font-size: 26rpx;
    font-weight: bold;
    color: rgba(255, 86, 75, 1);
    line-height: 18rpx;
    position: absolute;
    left: 418rpx;
    top: 52rpx;
}

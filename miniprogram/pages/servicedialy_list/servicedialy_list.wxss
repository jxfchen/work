.li {
  width: 100%;
  background-color: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.li_pic {
  color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.li_pic .pic_warp {
  width: 100%;
}


.li_pic .pic_warp image {
  width: 100%;
  height: 100%;
}

.li_pic .pic_text {
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 24rpx;
  z-index: 1;
  background: linear-gradient(-180deg, rgba(0, 0, 0, 0.00) 30%, #000 100%);
}

.li_pic .pic_text .label {
  height: 40rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #000;
  color: #fff;
  display: inline-block;
  border-radius: 40rpx;
}

.li .tlt {
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-top: 16rpx;
  margin-bottom: 4rpx;
}

.view_notice_contain {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  background: white;
  font-size: 26rpx;
}

.image_notice {
  margin-left: 5rpx;
}

.swiper_container {
  font-size: 22rpx;
  font-family: PingFangSC-Regular, PingFangSC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  position: relative;
  top: -35rpx;
  left: 90rpx;
  height: 70%;
}
.swiper_container .swiper_item{
  width: 65%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.rotation_chart {
  position: relative;
}

.swiper-block {
  height: 480rpx;
  width: 100%;
}
.notice_text{
  top: 0;
  right: 0;
  width: 80rpx;
  color: #fff;
  height: 43rpx;
  font-size: 20rpx;
  line-height: 43rpx;
  position: absolute;
}
.swiper-item {
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  overflow: unset;
}

.slide-image {
  border-radius: 12rpx;
  box-shadow: 0px 0px 30rpx rgba(0, 0, 0, 0.2);
  z-index: 1;
}


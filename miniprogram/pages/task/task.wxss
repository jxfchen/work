}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 999;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 20px;
}

.modal > view {
    margin: 10px 0;
    display: flex;
    /* align-items: center; */
    flex-direction: column;
}

.modal > view > text {
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 5px;
    color: #333;
}

.modal > view > image {
    border-radius: 10px;
}


<!--index.wxml-->
<view class="container">
  <view class="top">
    <view class="address">
      <image class="address_img" src="{{address_img}}"></image>
      <view class="section">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <input class='picker' placeholder-class='plhStyle' type='number' maxlength='50' placeholder='' bindinput="bindKeyInput" value='{{region[1]}}' disabled>
          </input>
          <image class="arrow_img" src="{{arrow_img}}"></image>
        </picker>
      </view>
    </view>
    <!-- 轮播图 -->
    <view class="rotation_chart" style="width:690rpx;height:320rpx;position: relative;">
      <!-- <swiper  autoplay="true" interval="10000" style="width:690rpx;height:320rpx;">
        <block wx:for="{{background}}" wx:key="*this">
          <swiper-item>
            <image src="{{item}}" class="swiper_img"></image>
          </swiper-item>
        </block>
      </swiper> -->
      <swiper style="width:690rpx;height:320rpx;border-radius: 12rpx;" autoplay='true' bindchange='swiperChange' interval='5000' duration='1000' indicator-color='rgba(0, 0, 0, .3)' indicator-active-color='red'>
        <block wx:key='*this' wx:for='{{background}}'>
          <swiper-item  style="border-radius: 12rpx;">
            <image bindchange='imageChange' style="border-radius: 12rpx;width: 690rpx;height: 320rpx;" id='{{index}}' src='{{item}}' class='slide-image {{swiperCurrent == index ? "active" : ""}}' />
          </swiper-item>
        </block>
      </swiper>
      <view class="dots">
        <block wx:for="{{background}}" wx:key="*this">
          <view class='dot {{swiperCurrent == index ? "active" : ""}}'></view>
        </block>
      </view>
    </view>

    <view class="notice">
      <image src="{{notice_img}}" class="notice_img"></image>
      <swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="5000">
        <block wx:for="{{noticeList}}">
          <swiper-item>
            <view class="swiper_item">{{item.content0}}</view>
            <view class="swiper_item">{{item.content1}}</view>
          </swiper-item>
        </block>
      </swiper>

      <!-- <text class="notice_text">恭喜02000号推客成功提现12800元！</text> -->
    </view>
  </view>
  <view class="middle">
    <view class="middle_top">
      <image class="logo1" src="/images/push.png"></image>
      <text class="push_text">推一单，赚一单</text>
      <image class="more_img" src="/images/arrow1.png"></image>
      <text class="more">更多</text>
    </view>
    <view class="middle_main">
      <scroll-view scroll-x="true" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
        <view style="display: flex; flex-direction:row;">
          <view class="card">
            <image class="card_img" src="/images/show.jpg"></image>
            <view class="card_ad">
              <image class="ad_img" src="/images/logo.png"></image>
              <text class="ad_text">9999人推单成功</text>
            </view>
            <view class="card_text">
              <text class="text_title">团餐、企业员工餐</text>
              <text style="font-size:20rpx;color:rgba(102,102,102,1);display: block;margin-left:24rpx">推客收益：<text style="font-size:23rpx;color:#FC6359;font-weight:bold">500.00</text>起<text>(通过后秒到账)</text></text>
              <text style="font-size:20rpx;color:rgba(102,102,102,1);display: block;margin-left:24rpx">合伙收益：<text style="font-size:23rpx;color:#FC6359;font-weight:bold">1K-9K</text>/月</text>
            </view>
            <button class="card_btn">
              <text class="btn_text">推单</text>
            </button>
          </view>
          <view class="card" style="display: inline-block">
            <image class="card_img" src="/images/show.jpg"></image>
            <view class="card_ad">
              <image class="ad_img" src="/images/logo.png"></image>
              <text class="ad_text">9999人推单成功</text>
            </view>
            <view class="card_text">
              <text class="text_title">团餐、企业员工餐</text>
              <text style="font-size:20rpx;color:rgba(102,102,102,1);display: block;margin-left:24rpx">推客收益：<text style="font-size:23rpx;color:#FC6359;font-weight:bold">500.00</text>起<text>(通过后秒到账)</text></text>
              <text style="font-size:20rpx;color:rgba(102,102,102,1);display: block;margin-left:24rpx">合伙收益：<text style="font-size:23rpx;color:#FC6359;font-weight:bold">1K-9K</text>/月</text>
            </view>
            <button class="card_btn">
              <text class="btn_text">推单</text>
            </button>
          </view>
        </view>
      </scroll-view>
    </view>

  </view>
  <view class="bottom">
    <view class="bottom_top">
      <image class="logo1" src="/images/server.png"></image>
      <text class="push_text">服务日记</text>
      <image class="more_img" src="/images/arrow1.png"></image>
      <text class="more">更多</text>
    </view>


    <view class='list padding_x30 '>
      <view class='li_warp dl liLeft li_left' id='liLeft'>
        <view class='li ' wx:for='{{list}}' wx:if="{{item.position=='left' || (index%2 == 0&&item.position=='center')}}" wx:key=''>
          <view class='li_pic'>
            <view class='pic_warp '>
              <image src='{{item.pic}}' mode='widthFix' bindload="imageLoadLeft" data-index='{{index}}'></image>
            </view>
          </view>
          <view style="width:334rpx;height:144rpx">
            <view class='tlt bold tlt_height' style="font-size:28rpx;font-weight:bord;margin-left:22rpx;margin-right:22rpx">别人家下午茶茶茶茶茶茶茶茶</view>
            <view class='flex_ f24'>
              <view>
                <image class="header" src="/images/header.jpg" style="width:50rpx;height:50rpx;border:1px solid rgba(255,255,255,1);border-radius:40rpx;margin:7rpx 11rpx 0 22rpx;float:left"></image>
                <view style="font-size:24rpx;color:rgba(102,102,102,1);padding-top:18rpx;">喵星小姐姐</view>
              </view>
              <view>
                <view style="font-size:26rpx;color:rgba(255,87,75,1);float:right;margin-right:12rpx;">447</view>
                <image src="/images/like1.png" style="width:40rpx;height:35rpx;float:right;margin-right:8rpx;margin-top:3rpx;"></image>
              </view>
              <!-- <view class=' gray' wx:if='{{false}}'>个人约战</view>
            <view class=' gray' wx:else>球队约战</view> -->
            </view>

          </view>

        </view>
      </view>

      <view class='li_warp dl liRight li_right' id='liRight'>
        <view class='li' wx:for='{{list}}' wx:if="{{item.position=='right' || (index%2 == 1&&item.position=='center')}}" wx:key=''>
          <view class='li_pic'>
            <view class='pic_warp '>
              <image src='{{item.pic}}' mode='widthFix' bindload="imageLoadRight" data-index='{{index}}'></image>
            </view>
          </view>
          <view style="width:334rpx;height:144rpx">
            <view class='tlt bold tlt_height' style="font-size:28rpx;font-weight:bord;margin-left:22rpx;margin-right:22rpx">别人家下午茶</view>
            <view class='flex_ f24'>
              <view>
                <image class="header" src="/images/header.jpg" style="width:50rpx;height:50rpx;border:1px solid rgba(255,255,255,1);border-radius:40rpx;margin:7rpx 11rpx 0 22rpx;float:left"></image>
                <view style="font-size:24rpx;color:rgba(102,102,102,1);padding-top:18rpx;">喵星小姐姐</view>
              </view>
              <view>
                <view style="font-size:26rpx;color:rgba(255,87,75,1);float:right;margin-right:12rpx;">447</view>
                <image src="/images/like1.png" style="width:40rpx;height:35rpx;float:right;margin-right:8rpx;margin-top:3rpx;"></image>
              </view>
              <!-- <view class=' gray' wx:if='{{false}}'>个人约战</view>
            <view class=' gray' wx:else>球队约战</view> -->
            </view>
          </view>

        </view>
      </view>
    </view>
  </view>
  <view style="position:relative;top:-75rpx;">
    <view style="font-size:24rpx;font-family:PingFangSC-Light,PingFangSC;font-weight:300;color:rgba(153,153,153,1);width:100%;text-align:center;background-color:#F6F6F6;height:80rpx;padding-top:20rpx;position:absolute">我是有底线的哟～</view>
  </view>
  <navigator url="/pages/workingmeal_intr/workingmeal_intr?title=workingmeal_intr" hover-class="navigator-hover">跳转到工作餐业务介绍</navigator>
</view>
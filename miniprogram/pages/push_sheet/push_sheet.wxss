}

radio ::before {
  width: 200rpx;
  height: 82rpx;
  background: rgba(244, 92, 82, 1);
  border-radius: 41rpx;
}

/* 单选框未选中 */

radio .wx-radio-input {
  display: none;
}
.item{
  width: 200rpx;
  height: 82rpx;
  float: left;
}
.service_selection label {
  border: 1rpx solid rgba(250, 96, 87, 1);
  color: rgba(244, 92, 82, 1);
  font-size: 28rpx;
  border-radius: 41rpx;
}

.service_selection .is_checked {
  width: 200rpx;
  height: 82rpx;
  background: rgba(244, 92, 82, 1);
  border-radius: 41rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 70rpx;
}

/* 遮罩层 */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.5;
}

/* pages/push_sheet/push_sheet.wxss */

.rotation_chart {
  margin: 0 8rpx;
  position: absolute;
  top: 26rpx;
  border-radius: 12px;
}

/* dot定位位置 */

.rotation_chart .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: -10rpx;
  display: flex;
  justify-content: center;
}

/* 未经过前dot */

.rotation_chart .dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background-color: #fecdaa;
  border-radius: 8rpx;
  transition: all 0.6s ease-in-out;
}

/* 经过后dot */

.rotation_chart .dots .dot.active {
  width: 24rpx;
  background: #f45c52;
}


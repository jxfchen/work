<view class="box {{direction == 4 ? 'bounceInDown' : 'bounceInUp'}} animated" bindtouchmove="handletouchmove" bindtouchstart="handletouchstart" bindtouchend="handletouchend">
  <video id="myVideo" style="height: 100vh" src="https://www.infinitybuild.cn{{infos.info.video}}" class="bgd" poster="https://www.infinitybuild.cn{{infos.info.cover_img}}" enable-progress-gesture="{{false}}" show-play-btn="{{false}}" show-fullscreen-btn="{{false}}" play-btn-position="{{false}}" controls="{{false}}" loop="{{true}}" object-fit="fill"></video>
  <view class="right ava">
    <image src="{{infos.info.avatarurl}}" mode="widthFix"></image><!-- 头像 -->
  </view>
  <view class="right zan" bindtap="clickLike">
    <!-- 赞之前 -->
    <image src="../../images/scb.png" mode="widthFix" wx:if="{{!isCommend}}"></image>
    <!-- 赞之后 -->
    <image src="../../images/sca.png" mode="widthFix" wx:if="{{isCommend}}"></image>
    <text>{{commendTimes}}</text><!-- 赞数 -->
  </view>
  <view class="con">
    <view class="title">{{infos.info.title}}</view>
    <view class="content">{{infos.info.article}}</view>
  </view>
</view>
/**index.wxss**/
page{
  height: 100%;
  overflow: hidden;
}
.container {
  width:750rpx;
  display: flex;
  padding-top:30rpx;
  position: relative;
  align-items: center;
  flex-direction: column;
}
.bga{
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  text-align: center;
  background: rgba(0, 0, 0, .5);
}
.bg{
  top: 0;
  left: 0;
  width: 750rpx;
  display: block;
  height: 1624rpx;
  position: absolute;
}
.hq{
  top: 50%;
  left: 50%;
  width: 500rpx;
  height: 250rpx;
  position:absolute;
  background: #fff;
  border-radius: 5px;
  margin: -250rpx 0 0 -250rpx;
}
.hq-nav{
  height: 30rpx;
  margin: 50rpx 0;
  font-size: 26rpx;
}
.but{
  width: 80%;
  height: 50rpx;
  margin: 0 auto;
}
.but button{
  width: 45%;
  padding: 0;
  height: 60rpx;
  font-size: 24rpx;
  line-height: 60rpx;
}
.but button.pop_btna{
  color: #999;
  border: 1px solid #eee;
}
.but button.pop_btn{
  color: #fff;
  border: 1px solid #F45C52;
  background: #F45C52
}
.but button:nth-child(1){
  float: left;
}
.but button:nth-child(2){
  float: right;
}
.center{
  width: 100%;
  height: auto;
  position: absolute;
}
.txt{
  width: 100%;
  color:#fff;
  font-size:100rpx;
  margin-top:60rpx;
  text-align: center;
  line-height:140rpx;
  font-weight:Semibold;
}
.text{
  color: #fff;
  font-size: 50rpx;
  font-weight: 300;
  line-height:84rpx;
  text-align: center;
  letter-spacing: 3px;
}
.b-txt{
  top:980rpx;
  font-size:30prx;
  color:#F45C52;
  line-height:42rpx;
  position:absolute;
}
.img{
  left: 50%;
  width:502rpx;
  margin-top:66rpx;
  position: absolute;
  margin-left: -251rpx;
}
.button{
  top:1050rpx;
  width:338rpx;
  height:80rpx;
  border-radius:48rpx;
  border:1rpx solid rgba(250,96,87,1);
  font-size:30rpx;
  font-weight:500;
  color:rgba(244,92,82,1);
  line-height:86rpx;
  text-align:center;
  position:absolute;
  background: none;
}
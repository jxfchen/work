/*总体主盒子*/
.container {
  position: relative;
  width: 100%;
  height: calc(100vh);
  color: #939393;
}
.box{
  padding: 35rpx 0 25rpx;
  background-color: #fff;
  position: relative;
}

.searchbar-result{
  left: 0;
  z-index: 2;
  top: 81rpx;
  width: 100%;
  position: absolute;
}
.search-box{
  position: relative;
  height:64rpx;
}

.search-box input{
  width: 100%;
  height: 64rpx;
  border-radius: 32rpx;
  background-color: #F8F6F7;
  padding-left: 328rpx;
  box-sizing: border-box;
}
.search{
  font-size: 28rpx;
  color: #A9A9A9;
}
.search-box image{
  width: 27rpx;
  height: 26rpx;
  position: absolute;
  left: 288rpx;
  top: 50%;
  margin-top: -13rpx;
}
/*左侧栏主盒子*/
.nav_left{
  /*设置行内块级元素（没使用定位）*/
  display: inline-block;
  width: 100%;

  /*主盒子设置背景色为灰色*/
  background: #fff;
  text-align: center;
  /* position: fixed;*/
  left: 0;
  top: 137rpx;
}  
/*左侧栏list的item*/
.nav_left .nav_left_items{
  /*每个高30px*/
  height: 80rpx;
  /*垂直居中*/
  line-height: 80rpx;
  /*再设上下padding增加高度，总高42px*/
  padding: 15rpx 0;
  /*文字14px*/
  font-size: 24rpx;
  color: #000; 
  position: relative;
}
/*左侧栏list的item被选中时*/
.nav_left .nav_left_items.active{
  /*背景色变成白色*/
  font-size: 24rpx;
  opacity: .9;
  background: #f0f0f0;
}
.nav_left .nav_left_items.active:after{
  content: "";
  width: 10rpx;
  height: 100%;
  background: #FF6D64;
  position: absolute;
  left: 0;
  top: 0;
}
/*右侧栏主盒子*/
.scroll_right{
  /*右侧盒子使用了绝对定位*/
  position: absolute;
  top: 0;
  right: 0; 
  overflow: auto; 
  flex: 1;
  /*宽度75%，高度占满，并使用百分比布局*/
  width: 70%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
} 
.mink::after{
  display:block;content:'';clear:both;
}
.jiul,.jiul image{
  width: 100%;
  height: 170rpx;
}
.minl{
  font-size: 29rpx;
  color: #333333;
  text-align: left;
  line-height: 60rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 40rpx;
}
.mink{
  width: 100%;
  background: #fff;
  height: 100%;
  padding-bottom:70rpx;
}
/*右侧栏list的item*/
.nav_right_items{
  /*浮动向左*/
   float: left;
  /*每个item设置宽度是33.33%*/
  width: 32.33%;
  height:65rpx;
  text-align: center;
  color: #4a4a4a;
  background: #f7f7f7;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 65rpx;
  margin-right: 1.32%;
  margin-bottom: 10rpx;
}
.mink  .nav_right_items:nth-child(3n){margin-right: 0;}
.nav_right_items image{
  /*被图片设置宽高*/
  width: 60px;
  height: 50px;
  margin-top: 15rpx;
}
.nav_right_items text{
  /*给text设成块级元素*/
  display: block;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  /*设置文字溢出部分为...*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover{
  background:#fff;
}
.scroll_left{
  top: 0;
  left: 0;
  width:30%;
  height: 100%;
  overflow: hidden;
  background:#fff;
  text-align:center; 
  position: absolute;
}


.items{
  float: left;
  width: 225rpx;
  margin-right: 35rpx;
  margin-bottom: 26rpx;
  box-shadow:0px 2px 6px 0px rgba(6,0,1,0.06);

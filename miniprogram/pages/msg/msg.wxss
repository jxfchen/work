.top{
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fafafa;
  border-bottom: 1px solid #eee;
}
.top view{
  width: 50%;
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}
.clk::after{
  left: 0;
  content: "";
  width: 100%;
  height: 2px;
  bottom: -1px;
  position: absolute;
  background: #F45C52;
}
.list-box{
  width: 100%;
  font-size: 24rpx;
  line-height: 70rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0 20rpx;
}
.list-box view{
  position: relative;
  padding-left: 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
}
.list-box view::after{
  left: 8rpx;
  top: 50%;
  content: "";
  width: 10rpx;
  height: 10rpx;
  margin-top: -5rpx;
  position: absolute;
  background: #F45C52;
}
.list-box view text{
  right: 10rpx;
  color: #aaa;
  position: absolute;
  line-height: 70rpx;
}